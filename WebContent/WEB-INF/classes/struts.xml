<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="false" />
	<package name="basicstruts2" extends="struts-default" namespace="/">
		<result-types>
			<result-type name="tiles" default="true"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
        <action name="Login" class="com.controller.facade" method="login">
            <result name="error" type="redirect">/error.jsp</result>
            <result name="success" type="tiles">platform</result>
            <result name="administrator" type="tiles">administrator</result>
        </action>
        <action name="QRpay" class="com.controller.facade" method="QRpay">
            <result name="error" type="redirect">/error.jsp</result>
            <result name="success" type="tiles">platform</result>
        </action>
        <action name="Payment" class="com.controller.controller" method="payment">
            <result name="error" type="redirect">/error.jsp</result>
            <result name="success" type="tiles">platform</result>
        </action>
 		<action name="Deposit" class="com.controller.controller" method="deposit">
            <result name="error" type="redirect">/error.jsp</result>
            <result name="success" type="tiles">platform</result>
        </action>
        <action name="ToPlatform" class="com.controller.facade" method="toPlatform">
            <result name="error" type="redirect">/error.jsp</result>
            <result name="success" type="tiles">platform</result>
        </action>
        <action name="TransactionDetail" class="com.controller.facade" method="showTransaction">
            <result name="error" type="redirect">/error.jsp</result>
            <result name="success" type="tiles">transaction</result>
        </action>
        <action name="readClientAll" class="com.controller.facade" method="readClientAll">
            <result name="error" type="redirect">/error.jsp</result>
            <result name="success" type="tiles">administrator</result>
        </action>
    </package>
</struts>
